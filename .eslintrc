{
  "parser": "babel-eslint",
  "parserOptions": { "ecmaVersion": 6 },
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "globals": {
    "__DEV__": false,
    "__MOCK__": false,
    "shallow": false,
    "mount": false,
    "globalProps": false,
    "EmptyDiv": false
  },
  "rules": {
    "jsx-quotes"            : [2, "prefer-single"],
    "object-curly-spacing"  : [2, "always"],
    "arrow-parens"          : ["warn", "as-needed"],
    "no-var"                : 2
  }
}