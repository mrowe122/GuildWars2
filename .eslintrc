{
  "parser": "babel-eslint",
  "parserOptions": { "ecmaVersion": 6 },
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
		"react",
		"promise"
  ],
  "env": {
    "browser" : true,
    "es6"     : true
  },
  "globals": {
    "__DEV__": false,
    "describe": false,
    "it": false,
    "expect": false
  },
  "rules": {
    "jsx-quotes"            : [2, "prefer-single"],
    "object-curly-spacing"  : [2, "always"],
    "arrow-parens"          : ["warn", "as-needed"],
    "no-var"                : 2
  }
}